# Run like this:
#  eipIoc -p my_plc=160.91.233.45 -m P=demo: -d plc3.db

record(ai, "$(P)number1")
{
  field(DTYP, "EtherIP")
  field(INP,  "@my_plc PR1[0]")
  field(SCAN, "1 second")
}

record(ai, "$(P)number2")
{
  field(DTYP, "EtherIP")
  field(INP,  "@my_plc PR1[1]")
  field(SCAN, "1 second")
}

record(ai, "$(P)number3")
{
  field(DTYP, "EtherIP")
  field(INP,  "@my_plc PR1[10]")
  field(SCAN, "1 second")
}

record(ao, "$(P)write2")
{
  field(DTYP, "EtherIP")
  field(OUT,  "@my_plc PR1[1] S 1")
}

record(ai, "$(P)int0")
{
  field(DTYP, "EtherIP")
  field(INP,  "@my_plc EDINT1[0]")
  field(SCAN, "1 second")
}

record(ao, "$(P)write_int0")
{
  field(DTYP, "EtherIP")
  field(OUT,  "@my_plc EDINT1[0] S 1")
}

record(bo, "$(P)write_bit0")
{
  field(DTYP, "EtherIP")
  field(OUT,  "@my_plc EDINT1[0] S 1")
  field(ZNAM, "Off")
  field(ONAM, "On")
}

record(bo, "$(P)write_bit1")
{
  field(DTYP, "EtherIP")
  field(OUT,  "@my_plc EDINT1[1] S 1")
  field(ZNAM, "Off")
  field(ONAM, "On")
  field(OSV,  "MAJOR")
}

record(bo, "$(P)write_bit10")
{
  field(DTYP, "EtherIP")
  field(OUT,  "@my_plc EDINT1[10] S 1")
  field(ZNAM, "Off")
  field(ONAM, "On")
}

