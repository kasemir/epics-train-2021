# Run like this:
#   eipIoc -p plc1=160.91.233.45,0 -m "PLC=plc1,P=demo:" -d plc4.db

record(ai, "$(P)number1")
{
	field(SCAN, "1 second")
	field(DTYP, "EtherIP")
	field(INP, "@$(PLC) PR1[0]")
	field(PREC, "2")
}

record(ai, "$(P)number2")
{
	field(SCAN, "1 second")
	field(DTYP, "EtherIP")
	field(INP, "@$(PLC) PR1[1]")
}

record(ai, "$(P)number3")
{
	field(SCAN, "1 second")
	field(DTYP, "EtherIP")
	field(INP, "@$(PLC) PR1[10]")
}

record(ao, "$(P)write2")
{
        field(DTYP, "EtherIP")
        field(OUT, "@$(PLC) PR1[1] S 1")
}



# Note that string data type of PLC is longer
# than the string record's value,
# so what you get might be truncated
record(stringin, "$(P)string")
{
	field(SCAN, "1 second")
	field(DTYP, "EtherIP")
	field(INP, "@$(PLC) testStr2")
}

record(stringout, "$(P)out")
{
	field(DTYP, "EtherIP")
	field(OUT, "@$(PLC) testStr2 S 1")
}

record(lsi, "$(P)lsi")
{
	field(SCAN, "1 second")
	field(DTYP, "EtherIP")
	field(SIZV, "60")
	field(INP, "@$(PLC) testStr3")
}

record(lso, "$(P)lso")
{
	field(DTYP, "EtherIP")
	field(OUT, "@$(PLC) testStr3 S 1")
	field(SIZV, "60")
}

